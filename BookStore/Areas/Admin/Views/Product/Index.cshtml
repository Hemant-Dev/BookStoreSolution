@using BookStore.Models.Models;
@model List<Product>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" asp-area="Admin" class="btn btn-primary"><i class="bi bi-file-plus"></i>Create New Product</a>
        </div>
    </div>

    
    <table id="tblData" class="table table-striped">
        <thead>
            <tr>
                <th>
                    Product Title
                </th>
                <th>
                    Product Desciption
                </th>
                <th>
                    Author
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    List Price
                </th>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>
    </table>

</div>


@section Scripts {
    <script src="~/js/product.js"></script> 
   
}