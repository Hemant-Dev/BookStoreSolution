@model int

<div class="container row p-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">
            Payment Successfull!
        </h1>
        Your Order Number: @Model <br /> <br />
        <img src="~/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Payment has been paid successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" 
        asp-route-orderId="@Model" class="btn btn-primary">Back To Order Details></a>
    </div>
</div>